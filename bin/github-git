#!/bin/bash
set -e
SCRIPT_DIR=$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")
export GIT_CONFIG_GLOBAL="$SCRIPT_DIR/github-git.config"
export GIT_SSH_CONFIG="$SCRIPT_DIR/github-git.ssh-config"
export GIT_SSH_COMMAND="ssh -F $GIT_SSH_CONFIG"
if [[ $(stat -c '%a' "$GIT_SSH_CONFIG") != "600" ]]; then
  (set -e -x; chmod 0600 "$GIT_SSH_CONFIG")
fi
exec git "$@"

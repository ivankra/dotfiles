[url "git@github.com:"]
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"

[url "git@gist.github.com:"]
	pushInsteadOf = "git://gist.github.com/"

###

[alias]
	amend = commit --amend
	br = branch
	ci = commit
	cia = commit --amend
	caa = commit -a --amend
	co = checkout
	cp = cherry-pick
	detach = !git checkout HEAD^0
	lg = log --pretty=oneline --abbrev-commit --decorate
	pp = !git pull && git push
	root = rev-parse --show-toplevel
	st = status
	unstage = reset HEAD --
	gca = !git -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc --prune=now --aggressive

[color]
	ui = auto

[core]
	pager = less -FSRXi

[init]
	templateDir = $HOME/.dotfiles/bin/github-git.template

[pull]
	ff = only
	rebase = false

[push]
	default = matching

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

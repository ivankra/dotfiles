# Be 8 bit clean
set input-meta on
set output-meta on

# Autocompletion settings
set colored-completion-prefix on
set colored-stats on
set completion-ignore-case on
set mark-directories on
set mark-symlinked-directories on
set menu-complete-display-prefix on
set show-all-if-ambiguous on
set skip-completed-text on
set visible-stats on
set match-hidden-files off
set expand-tilde off

# Tab once to show completions menu, twice to cycle between completions.
# Shift-Tab to cycle backwards.
# Ignore for Mac OS X's bash 3.x where this feature is broken.
$if version >= 1.0
TAB: menu-complete
"\e[Z": menu-complete-backward
$endif

# Home/End (alt: Ctrl-A/Ctrl-E)
"\e[1~": beginning-of-line
"\e[4~": end-of-line
# for non RH/Debian xterm, can't hurt for RH/Debian xterm
"\eOH": beginning-of-line
"\eOF": end-of-line
# for freebsd console
"\e[H": beginning-of-line
"\e[F": end-of-line

# Delete/Insert
"\e[3~": delete-char
"\e[2~": quoted-insert

# Ctrl+Left, Ctrl+Right
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

#$if term=rxvt
"\e[7~": beginning-of-line
"\e[8~": end-of-line
"\eOc": forward-word
"\eOd": backward-word
#$endif

# Up/Down
"\e[A": history-search-backward
"\e[B": history-search-forward

# Ctrl+Backspace/Alt+Backspace: delete part of the word till previous /
"\C-H": unix-filename-rubout
"\e\d": unix-filename-rubout

# Ctrl+Delete: delete word forward
"\e[3;5~": kill-word
